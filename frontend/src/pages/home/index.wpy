            <i-cell title="开关">
              <i-switch
                value="{{true}}"
                @change="changeFeatureInfo"
                slot="footer"
                wx:if="{{featureInfo[actionDeviceInfo.controlName] !== '0'}}"
              />
              <i-switch
                value="{{false}}"
                @change="changeFeatureInfo"
                slot="footer"
                wx:else
              />
            </i-cell>
