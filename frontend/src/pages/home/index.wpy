              <i-input-number
                value="{{(featureInfo[actionDeviceInfo.controlName])}}"
                min="1" max="3"
                bindchange="changeFeatureInfo"
                slot="footer"
              />
            </i-cell>
          </i-cell-group>
        </view>
        <!-- 空调 -->
        <view wx:if="{{actionDeviceInfo.originControlName === 'tem'}}">
